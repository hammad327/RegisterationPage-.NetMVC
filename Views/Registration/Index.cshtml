@model Register.Models.User
@Html.ValidationSummary(false,"", new { @class = "text-danger" })

<form asp-action="Index" method="post">
    <div class ="text-capitalize" style="text-align: center">
    <h3 >Register Here</h3>
    <h6>Please Fill the form </h6>
    </div>

    <div style="color:black; font-family:sans-serif ">
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

        <div class="form-group" style="margin-bottom: 15px">
        <label>Age:</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
        <div style="margin-bottom: 15px">
        <label>Gender:</label>
            <label>
                @Html.RadioButtonFor(User => User.Gender, "Male")
                Male
            </label>

            <label>
                @Html.RadioButtonFor(User => User.Gender, "Female")
                Female
            </label>
       <br />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px">
        <label>Country:</label>
        <select asp-for="Country" class="form-control">
            <option value="">Select a country</option>
            <option value="Pak">Pakistan</option>
            <option value="Ind">India</option>
            <option value="US">US</option>
            <option value="UK">UK</option>
        </select>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
        <div class="form-group" style="margin-bottom: 15px">
            <label asp-for="DateOfBirth">Date of Birth:</label>
            <input asp-for="DateOfBirth" class="form-control" type="date" value="" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px">
            <div class="form-check">
                <input asp-for="AcceptTermsAndConditions" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="AcceptTermsAndConditions"></label>
            </div>
            <span asp-validation-for="AcceptTermsAndConditions" class="text-danger"></span>
        </div>

    </div>

    <button type="submit" class="btn btn-danger">Register</button>
</form>
